{% extends 'layout.twig' %}

{% block body %}

	<h4 class="text-center">
		{{ notes is not empty ? "Toutes vos notes" : "Vous n'avez aucune note pour l'instant..." }}
	</h4>

	{% if notes is not empty %}
		<div class="row">
			<div class="col"></div>

			<div class="col-8">

				<table class="table table-striped table-dark">
					<tr>
						<th>#</th>
						<th>Contenu</th>
					</tr>

					{% for note in notes %}
						<tr>
							<td>{{ note._id }}</td>
							<td>{{ note.content }}</td>
						</tr>
					{% endfor %}
				</table>

			</div>

			<div class="col"></div>
		</div>
	{% endif %}

{% endblock %}